
<h1> this  table containes  {{authors|length}} </h1>

{% if authors is defined %}
<table border='2'> 
    <tr>
        <th>Id</th>
        <th>username</th>
        <th>email</th>
        <th>picture</th>
        <th>nb_books</th>
        <th>Actions</th>
    </tr>
    <tr  {% for author in authors %} >
            <td>{{ author.id }}</td>
            <td>{{ author.username | upper }}</td>
            <td>{{ author.email }}</td>
            <td><img src="{{ asset (author.picture) }}"
                style="width:50px;height:50px;"></td>

            <td>{{ author.nb_books }}</td>
    </tr    {% endfor %}>
</table>
{% else %}
    <h1>No authors found</h1>
{% endif %}